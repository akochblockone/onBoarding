<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="producerLabelTextView, blockNumberLabelTextView" />

    <TextView
        android:id="@+id/producerLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:text="@string/block_producer_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Producer" />

    <TextView
        android:id="@+id/producerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintTop_toTopOf="@id/producerLabelTextView"
        tools:text="AKoch" />

    <TextView
        android:id="@+id/blockNumberLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingEnd="10dp"
        android:text="@string/block_number_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/producerTextView"
        tools:text="Block Number" />

    <TextView
        android:id="@+id/blockNumberTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toTopOf="@id/blockNumberLabelTextView"
        tools:text="1231234512312" />

    <ImageView
        android:id="@+id/cachedIndicatorView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/green_circle_shape"
        app:layout_constraintTop_toTopOf="@id/producerLabelTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/blockNumberTextView"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/nonCachedIndicatorView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/red_circle_shape"
        app:layout_constraintTop_toTopOf="@id/producerLabelTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/blockNumberTextView"
        android:visibility="gone"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
